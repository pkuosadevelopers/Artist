<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF808080"
    >
    
    <com.example.artist.PaintView
        android:id="@+id/PaintView"
        android:layout_width="fill_parent"
        android:layout_height="360px"
    />
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
	<LinearLayout
	   android:orientation="horizontal"
	   android:layout_width="fill_parent"
	   android:layout_height="60px"
	   android:layout_marginTop="360px"
	   android:background="#FF808080">
	    <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:layout_marginLeft="5px"
            android:layout_marginTop="3px"
            android:id="@+id/FreeCurve"
            android:text="自由曲线"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Line"
            android:text="直线"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Oval"
            android:text="椭圆"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Rect"
            android:text="矩形"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Emboss"
            android:text="浮雕效果"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Blur"
            android:text="模糊效果"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Dash"
            android:text="虚线效果"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/SrcATop"
            android:text="透明效果"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Erase"
            android:text="橡皮擦"
            />
	</LinearLayout>
	
	<LinearLayout
	   android:orientation="horizontal"
	   android:layout_width="fill_parent"
	   android:layout_height="60px"
	   android:layout_marginTop="0px"
	   android:background="#FF808080">
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
		    android:layout_marginLeft="5px"
		    android:layout_marginTop="3px"
		    android:id="@+id/PenColor"
		    android:text="画笔颜色"
		    />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Size"
            android:text="画笔粗细"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/BkColor"
            android:text="背景颜色"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Choose"
            android:text="背景图片"
            />
		<Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Decal"
            android:text="贴花"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Clear"
            android:text="清除"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Save"
            android:text="保存"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Load"
            android:text="加载"
            />
        <Button
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/shape"
            android:layout_marginTop="3px"
            android:id="@+id/Back"
            android:text="返回主菜单"
            />
	</LinearLayout>
	
</LinearLayout>
	
</RelativeLayout>
