<?xml version="1.0" encoding="UTF-8"?> 

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">   
        <shape>   
            <gradient 
                android:startColor="#ffffff" 
                android:endColor="#f403c9"  
                android:angle="270"/>   
            <stroke 
                android:width="2dip" 
                android:color="#ee31ff5e"/>   
            <corners 
                android:radius="5dip"/>   
            <padding 
                android:left="10dp" 
                android:top="10dp"  
                android:right="10dp" 
                android:bottom="10dp"/>   
        </shape>   
    </item>    
    
    <item android:state_focused="true">   
        <shape>   
            <gradient 
                android:startColor="#ffc2b7" 
                android:endColor="#ffc2b7"  
                android:angle="270"/>   
            <stroke 
                android:width="1dip" 
                android:color="#f403c9"/>   
            <corners 
                android:radius="5dp"/>   
            <padding 
                android:left="10dp" 
                android:top="10dp"  
                android:right="10dp" 
                android:bottom="10dp"/>   
        </shape>   
    </item>   
    
    <item>   
        <shape>   
            <gradient 
                android:startColor="#FFFF0000" 
        		android:endColor="#80FF00FF" 
				android:angle="270"/> 
    		<padding    
        		android:left="10dp"    
        		android:top="10dp"    
        		android:right="10dp"    
        		android:bottom="10dp"/>
    		<stroke 
        		android:width="2dp" 
        		android:color="#ee31ff5e" 
        		android:dashWidth="3dp" 
        		android:dashGap="2dp"/>
            <corners 
                android:radius="5dp"/>        
        </shape>   
    </item> 
    
</selector>  
